{
    "name": "workspaces",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@changesets/cli": "^2.29.8",
        "@types/node": "^24.10.3",
        "prettier": "^3.7.4",
        "tsup": "^8.5.1"
    },
    "scripts": {
        "check": "bun run typecheck && bun run lint",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "build": "bun -r --filter './packages/*' run build",
        "clean": "bun -r --filter './packages/*' run clean",
        "changeset": "bunx changeset",
        "version": "bunx changeset version",
        "publish:ci": "bunx changeset publish",
        "release": "bun run version && bun run build && bun run publish:ci",
        "sakiko": "bun workspace @togawa-dev/sakiko",
        "umiri": "bun workspace @togawa-dev/umiri",
        "uika": "bun workspace @togawa-dev/uika"
    },
    "packageManager": "bun@1.3.3"
}
